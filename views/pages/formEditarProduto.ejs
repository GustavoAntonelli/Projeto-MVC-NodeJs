<%- include('../partials/header'); %>
<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="mt-5">Cadastrar Produtos</h1>
            <form action="/produtos/editarProduto" method="POST">
                <div class="form-grpup">
                    <label for="nome">Nome</label>
                    <input type="text" id="nome" name="nome" placeholder="Nome do produto" class="form-control" value="<%=resultado.nome%>">
                </div>
                <div class="form-group">
                    <label for="valor">Valor Unitário</label>
                    <input type="number" step="0.01" id="valor" name="valor" class="form-control" placeholder="0,00" value="<%=resultado.vlUnit%>">
                </div>
                <div class="form-group">
                    <label for="codbar">Código de barra</label>
                    <input type="text" id="codbar" name="codbar" class="form-control" placeholder="00000000" value="<%=resultado.codBar%>">
                </div>
                <input type="hidden" name="id" value="<%=resultado._id%>">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer'); %>